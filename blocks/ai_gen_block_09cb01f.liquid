<div class="ai-brand-values-{{ ai_gen_id }} db-crafted-with-care" data-db-crafted="{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-brand-values-container-{{ ai_gen_id }} db-crafted__container page-width">
    <div class="ai-brand-values-header-{{ ai_gen_id }} db-craft-heading db-crafted__header">
      <div class="db-crafted__divider" aria-hidden="true"></div>
      {% if block.settings.section_heading != blank %}
        <h2 class="ai-brand-values-heading-{{ ai_gen_id }} db-crafted__title">{{ block.settings.section_heading }}</h2>
      {% endif %}
      {% if block.settings.section_subheading != blank %}
        <div class="ai-brand-values-subheading-{{ ai_gen_id }} db-crafted__sub">{{ block.settings.section_subheading }}</div>
      {% endif %}
    </div>
    <div class="db-craft-grid-wrap">
      <div class="ai-brand-values-grid-{{ ai_gen_id }} db-craft-grid">
      {% for i in (1..6) %}
        {% liquid
          assign value_enabled_key = 'value_' | append: i | append: '_enabled'
          assign value_image_key = 'value_' | append: i | append: '_image'
          assign value_title_key = 'value_' | append: i | append: '_title'
          assign value_description_key = 'value_' | append: i | append: '_description'
          assign learn_more_url = ''

          assign value_enabled = block.settings[value_enabled_key]
          assign value_image = block.settings[value_image_key]
          assign value_title = block.settings[value_title_key]
          assign value_description = block.settings[value_description_key]

          case i
            when 1
              assign learn_more_url = '/pages/sourcing'
            when 2
              assign learn_more_url = '/pages/craft'
            when 3
              assign learn_more_url = '/pages/longevity'
          endcase
        %}

        {% if value_enabled %}
          <div class="ai-brand-value-card-{{ ai_gen_id }} db-craft-item">
            <div class="ai-brand-value-image-wrapper-{{ ai_gen_id }}">
              {% if value_image %}
                <img
                  src="{{ value_image | image_url: width: 800 }}"
                  alt="{{ value_image.alt | escape }}"
                  loading="lazy"
                  width="{{ value_image.width }}"
                  height="{{ value_image.height }}"
                  class="ai-brand-value-image-{{ ai_gen_id }} db-craft-image"
                >
              {% else %}
                <div class="ai-brand-value-image-placeholder-{{ ai_gen_id }} db-craft-image">
                  {{ 'lifestyle-1' | placeholder_svg_tag }}
                  <div class="ai-brand-value-empty-state-{{ ai_gen_id }}">
                    Add an image
                  </div>
                </div>
              {% endif %}
            </div>

            <div class="ai-brand-value-content-{{ ai_gen_id }}">
              {% if value_title != blank %}
                <h3 class="ai-brand-value-title-{{ ai_gen_id }}">{{ value_title }}</h3>
              {% endif %}

              {% if value_description != blank %}
                <div class="ai-brand-value-description-{{ ai_gen_id }}">
                  {{ value_description }}
                </div>
              {% endif %}

              {% if learn_more_url != blank %}
                <a class="db-craft-link" href="{{ learn_more_url }}">Learn more &rarr;</a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  (() => {
    const section = document.querySelector('[data-db-crafted="{{ ai_gen_id }}"]');
    if (!section) return;

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)');
    if (prefersReducedMotion.matches) {
      section.classList.add('is-revealed');
      section.classList.remove('is-reveal-pending');
      return;
    }

    section.classList.add('is-reveal-pending');

    if (!('IntersectionObserver' in window)) {
      section.classList.add('is-revealed');
      section.classList.remove('is-reveal-pending');
      return;
    }

    const observer = new IntersectionObserver(
      (entries, obs) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            section.classList.add('is-revealed');
            section.classList.remove('is-reveal-pending');
            obs.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.2 }
    );

    observer.observe(section);
  })();
</script>


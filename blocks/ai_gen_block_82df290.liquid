{% doc %}
  @prompt
    Can you build a "join our community" section that allows customers to input their email addresses and join our mailing list, Put the subscribe box to the right, Can you revert to the very first one you produced?
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-community-signup-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-community-signup__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-community-signup__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
  }

  .ai-community-signup__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 {{ block.settings.form_spacing }}px;
    line-height: 1.5;
  }

  .ai-community-signup__form-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.form_max_width }}px;
    margin: 0 auto;
  }

  .ai-community-signup__field-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.button_gap }}px;
    flex-wrap: wrap;
  }

  .ai-community-signup__input-{{ ai_gen_id }} {
    flex: 1 1 250px;
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_font_size }}px;
  }

  .ai-community-signup__input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_text_color }};
    opacity: 0.6;
  }

  .ai-community-signup__input-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.input_hover_background }};
  }

  .ai-community-signup__button-{{ ai_gen_id }} {
    padding: {{ block.settings.input_padding }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .ai-community-signup__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-community-signup__message-{{ ai_gen_id }} {
    margin-top: 12px;
    font-size: 14px;
  }

  .ai-community-signup__success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
  }

  .ai-community-signup__error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-community-signup-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-community-signup__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-community-signup__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-community-signup__field-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-community-signup__input-{{ ai_gen_id }} {
      flex: 1 1 100%;
    }

    .ai-community-signup__button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-community-signup-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-community-signup__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-community-signup__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-community-signup__subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}

    <div class="ai-community-signup__form-wrapper-{{ ai_gen_id }}">
      {% form 'customer', class: 'ai-community-signup__form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        
        <div class="ai-community-signup__field-{{ ai_gen_id }}">
          <input
            type="email"
            name="contact[email]"
            class="ai-community-signup__input-{{ ai_gen_id }}"
            value="{{ form.email }}"
            placeholder="{{ block.settings.email_placeholder }}"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-community-signup-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="ai-community-signup-success-{{ ai_gen_id }}"
            {% endif %}
            required
          >
          <button
            type="submit"
            class="ai-community-signup__button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </button>
        </div>

        <div class="ai-community-signup__message-{{ ai_gen_id }}">
          {% if form.posted_successfully? %}
            <div
              id="ai-community-signup-success-{{ ai_gen_id }}"
              class="ai-community-signup__success-{{ ai_gen_id }}"
            >
              {{ block.settings.success_message }}
            </div>
          {% endif %}

          {% if form.errors %}
            <div
              id="ai-community-signup-error-{{ ai_gen_id }}"
              class="ai-community-signup__error-{{ ai_gen_id }}"
            >
              {{ form.errors.messages.email }}
            </div>
          {% endif %}
        </div>
      {% endform %}
    </div>
  </div>
</div>


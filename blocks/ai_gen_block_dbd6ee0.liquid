{% doc %}
  @prompt
    Create a rotating best sellers hero carousel - the images should be dynamic, so that the image changes when customers hover on them. There should be a section to show the price and product description. Also add a button that allows the customer to add it straight to their basket
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-bestsellers-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-bestsellers-carousel__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-bestsellers-carousel__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-bestsellers-carousel__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 10px;
  }

  .ai-bestsellers-carousel__subtitle-{{ ai_gen_id }} {
    font-family: var(--db-type-press-family);
    font-size: var(--db-type-press-size);
    line-height: var(--db-type-press-line-height);
    color: {{ block.settings.text_color }};
    margin: 0;
    text-transform: var(--db-type-press-case);
    letter-spacing: var(--db-type-press-letter-spacing);
    opacity: 0.8;
  }

  .ai-bestsellers-carousel__track-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-bestsellers-carousel__track-{{ ai_gen_id }} {
    --carousel-gap: 24px;
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: calc((100% - (var(--carousel-gap) * 3)) / 4);
    gap: var(--carousel-gap);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    padding: 6px 0 16px;
    scrollbar-width: none;
  }

  .ai-bestsellers-carousel__track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-bestsellers-carousel__slide-{{ ai_gen_id }} {
    scroll-snap-align: start;
    background-color: var(--db-color-soft-white);
    border: 1px solid rgb(var(--color-foreground-rgb) / 0.06);
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    padding: 24px 24px 28px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    position: relative;
    box-shadow: none;
    transition: border-color var(--animation-speed) var(--animation-easing);
    cursor: pointer;
  }

  .ai-bestsellers-carousel__slide-{{ ai_gen_id }}:hover {
    border-color: rgb(var(--color-foreground-rgb) / 0.12);
  }

  .ai-bestsellers-carousel__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 5;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: var(--db-color-soft-sand);
  }

  .ai-bestsellers-carousel__image-{{ ai_gen_id }} {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity var(--animation-speed) var(--animation-easing),
      filter var(--animation-speed) var(--animation-easing);
    filter: brightness(1) contrast(1);
  }

  .ai-bestsellers-carousel__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--db-color-soft-sand);
    color: rgb(var(--color-foreground-rgb) / 0.35);
  }

  .ai-bestsellers-carousel__image-placeholder-{{ ai_gen_id }} svg {
    width: 70%;
    height: 70%;
    opacity: 0.5;
    fill: none;
    stroke: currentColor;
    stroke-width: 1.6;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-bestsellers-carousel__card-link-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
    height: 100%;
    flex: 1;
    color: inherit;
    text-decoration: none;
    border-radius: inherit;
  }

  .ai-bestsellers-carousel__image-{{ ai_gen_id }}.ai-hidden-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    pointer-events: none;
  }

  .ai-bestsellers-carousel__image-{{ ai_gen_id }}.ai-visible-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-bestsellers-carousel__info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-bestsellers-carousel__slide-{{ ai_gen_id }}:hover .ai-bestsellers-carousel__image-{{ ai_gen_id }},
  .ai-bestsellers-carousel__slide-{{ ai_gen_id }}:focus-within .ai-bestsellers-carousel__image-{{ ai_gen_id }} {
    filter: brightness(1.02) contrast(1.02);
  }

  .ai-bestsellers-carousel__nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-top: 28px;
  }

  .ai-bestsellers-carousel__arrow-{{ ai_gen_id }} {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background-color: transparent;
    border: 1px solid rgb(var(--color-foreground-rgb) / 0.18);
    color: rgb(var(--color-foreground-rgb) / 0.4);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: border-color var(--animation-speed) var(--animation-easing),
      color var(--animation-speed) var(--animation-easing),
      background-color var(--animation-speed) var(--animation-easing),
      opacity var(--animation-speed) var(--animation-easing);
    opacity: 0.7;
  }

  .ai-bestsellers-carousel__arrow-{{ ai_gen_id }}:hover {
    border-color: rgb(var(--color-foreground-rgb) / 0.35);
    color: rgb(var(--color-foreground-rgb) / 0.6);
    background-color: transparent;
    opacity: 1;
  }

  .ai-bestsellers-carousel__arrow-{{ ai_gen_id }} svg {
    width: 18px;
    height: 18px;
    stroke: currentColor;
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-bestsellers-carousel__track-{{ ai_gen_id }} {
      scroll-behavior: auto;
    }

    .ai-bestsellers-carousel__slide-{{ ai_gen_id }} {
      transition: none;
    }

    .ai-bestsellers-carousel__arrow-{{ ai_gen_id }} {
      transition: none;
    }
  }

  .ai-bestsellers-carousel__product-title-{{ ai_gen_id }} {
    font-size: min({{ block.settings.product_title_size }}px, 1.1rem);
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  .ai-bestsellers-carousel__descriptor-{{ ai_gen_id }} {
    font-size: 0.85rem;
    color: rgb(var(--color-foreground-rgb) / 0.7);
    margin: 0;
    line-height: 1.5;
  }

  .ai-bestsellers-carousel__price-{{ ai_gen_id }} {
    font-size: 0.8rem;
    color: rgb(var(--color-foreground-rgb) / 0.5);
    margin: 0;
    font-weight: 400;
    transition: color var(--animation-speed) var(--animation-easing);
  }

  .ai-bestsellers-carousel__slide-{{ ai_gen_id }}:hover .ai-bestsellers-carousel__price-{{ ai_gen_id }},
  .ai-bestsellers-carousel__slide-{{ ai_gen_id }}:focus-within .ai-bestsellers-carousel__price-{{ ai_gen_id }} {
    color: #6FA9B8;
  }

  .ai-bestsellers-carousel__price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-left: 10px;
    font-size: 0.85em;
  }

  .ai-bestsellers-carousel__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-bestsellers-carousel__track-{{ ai_gen_id }} {
      grid-auto-columns: minmax(180px, 75%);
      gap: 20px;
    }

    .ai-bestsellers-carousel__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }
  }

  @media screen and (max-width: 1100px) {
    .ai-bestsellers-carousel__track-{{ ai_gen_id }} {
      grid-auto-columns: calc((100% - (var(--carousel-gap) * 2)) / 3);
    }
  }

  @media screen and (max-width: 900px) {
    .ai-bestsellers-carousel__track-{{ ai_gen_id }} {
      grid-auto-columns: calc((100% - var(--carousel-gap)) / 2);
    }
  }
{% endstyle %}

<bestsellers-carousel-{{ ai_gen_id }}

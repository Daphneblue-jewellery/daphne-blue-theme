                    src="{{ product.featured_image | image_url: width: 800 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-bestsellers-carousel__image-{{ ai_gen_id }} ai-visible-{{ ai_gen_id }}"
                    width="800"
                    height="800"
                    loading="lazy"
                    data-image-index="0"
                  >
                  {% if product.images.size > 1 %}
                    {% for image in product.images offset: 1 limit: 2 %}
                      <img
                        src="{{ image | image_url: width: 800 }}"
                        alt="{{ image.alt | escape }}"
                        class="ai-bestsellers-carousel__image-{{ ai_gen_id }} ai-hidden-{{ ai_gen_id }}"
                        width="800"
                        height="800"
                        loading="lazy"
                        data-image-index="{{ forloop.index }}"
                      >
                    {% endfor %}
                  {% endif %}
                {% else %}
                  <div class="ai-bestsellers-carousel__image-placeholder-{{ ai_gen_id }}">
                    {% assign icon_index = forloop.index0 | modulo: 8 %}
                    {% case icon_index %}
                      {% when 0 %}
                        <svg viewBox="0 0 64 64" aria-hidden="true">
                          <path d="M10 20c10 16 34 16 44 0"/>
                          <path d="M32 28v6"/>
                          <circle cx="32" cy="40" r="6"/>
                        </svg>
                      {% when 1 %}
                        <svg viewBox="0 0 64 64" aria-hidden="true">
                          <circle cx="32" cy="36" r="14"/>
                          <circle cx="32" cy="16" r="4"/>
                          <path d="M28 22l4-6 4 6"/>
                        </svg>
                      {% when 2 %}
                        <svg viewBox="0 0 64 64" aria-hidden="true">
                          <circle cx="22" cy="32" r="6"/>
                          <circle cx="42" cy="32" r="6"/>
                        </svg>
                      {% when 3 %}
                        <svg viewBox="0 0 64 64" aria-hidden="true">
                          <circle cx="24" cy="32" r="12"/>
                          <circle cx="40" cy="32" r="12"/>
                        </svg>
                      {% when 4 %}
                        <svg viewBox="0 0 64 64" aria-hidden="true">
                          <path d="M14 30c6-10 30-10 36 0"/>
                          <path d="M14 34c6 10 30 10 36 0"/>
                          <circle cx="14" cy="32" r="2"/>
                          <circle cx="50" cy="32" r="2"/>
                        </svg>
                      {% when 5 %}
                        <svg viewBox="0 0 64 64" aria-hidden="true">
                          <path d="M20 22c-6 4-10 10-10 18 0 12 10 22 22 22s22-10 22-22c0-8-4-14-10-18"/>
                        </svg>
                      {% when 6 %}
                        <svg viewBox="0 0 64 64" aria-hidden="true">
                          <rect x="14" y="24" width="24" height="16" rx="8"/>
                          <rect x="26" y="24" width="24" height="16" rx="8"/>
                        </svg>
                      {% else %}
                        <svg viewBox="0 0 64 64" aria-hidden="true">
                          <path d="M32 14c6 6 10 12 10 18 0 6-4 10-10 10s-10-4-10-10c0-6 4-12 10-18z"/>
                          <circle cx="32" cy="14" r="3"/>
                        </svg>
                    {% endcase %}
                  </div>
                {% endif %}
              </div>

                <div class="ai-bestsellers-carousel__info-{{ ai_gen_id }}">
                  <h3 class="ai-bestsellers-carousel__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                  {% assign descriptor_line = descriptor_lines[forloop.index0] | default: 'Quietly luminous' %}
                  <p class="ai-bestsellers-carousel__descriptor-{{ ai_gen_id }}">{{ descriptor_line }}</p>
                  <div class="ai-bestsellers-carousel__price-{{ ai_gen_id }}">
                    {{ product.price | money }}
                    {% if product.compare_at_price > product.price %}
                      <span class="ai-bestsellers-carousel__price-compare-{{ ai_gen_id }}">
                        {{ product.compare_at_price | money }}
                      </span>
                    {% endif %}
                  </div>
                </div>
              </a>
            </article>
          {% endfor %}
        {% endif %}
      </div>
    </div>
    <div class="ai-bestsellers-carousel__nav-{{ ai_gen_id }}" aria-label="Carousel navigation">
      <button class="ai-bestsellers-carousel__arrow-{{ ai_gen_id }}" data-prev aria-label="Previous slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <button class="ai-bestsellers-carousel__arrow-{{ ai_gen_id }}" data-next aria-label="Next slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</bestsellers-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class BestsellersCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
        this.autoplayInterval = null;
        this.currentImageIndexes = {};
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-bestsellers-carousel__track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-bestsellers-carousel__slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-bestsellers-carousel__dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.imageWrappers = this.querySelectorAll('.ai-bestsellers-carousel__image-wrapper-{{ ai_gen_id }}');

    this.totalSlides = this.slides.length;

        if (this.totalSlides === 0) return;

        this.imageWrappers.forEach((wrapper) => {
          const productId = wrapper.dataset.productId;
          this.currentImageIndexes[productId] = 0;
        });

        this.setupEventListeners();
        this.updateCarousel();

        if (this.dataset.autoplay === 'true') {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.dots.forEach((dot) => {
          dot.addEventListener('click', (e) => {
            const index = parseInt(e.target.dataset.dot);
            this.goToSlide(index);
          });
        });

        this.imageWrappers.forEach((wrapper) => {
          wrapper.addEventListener('mouseenter', () => this.cycleImage(wrapper));
        });

      }

      cycleImage(wrapper) {
        const productId = wrapper.dataset.productId;
        const images = wrapper.querySelectorAll('.ai-bestsellers-carousel__image-{{ ai_gen_id }}');

        if (images.length <= 1) return;

        const currentIndex = this.currentImageIndexes[productId];
        const nextIndex = (currentIndex + 1) % images.length;

        images[currentIndex].classList.remove('ai-visible-{{ ai_gen_id }}');
        images[currentIndex].classList.add('ai-hidden-{{ ai_gen_id }}');

        images[nextIndex].classList.remove('ai-hidden-{{ ai_gen_id }}');
        images[nextIndex].classList.add('ai-visible-{{ ai_gen_id }}');

        this.currentImageIndexes[productId] = nextIndex;
      }


      prevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        this.updateCarousel();
        this.resetAutoplay();
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
        this.updateCarousel();
        this.resetAutoplay();
      }

      goToSlide(index) {
        if (Number.isNaN(index)) return;
        this.currentSlide = index;
        this.updateCarousel();
        this.resetAutoplay();
      }

      updateCarousel() {
        const target = this.slides[this.currentSlide];
        if (target && this.isCarouselInView()) {
          const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
          target.scrollIntoView({
            behavior: prefersReducedMotion ? 'auto' : 'smooth',
            inline: 'start',
            block: 'nearest'
          });
        }

        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('ai-active-{{ ai_gen_id }}');
          } else {
            dot.classList.remove('ai-active-{{ ai_gen_id }}');
          }
        });
      }

      isCarouselInView() {
        const rect = this.getBoundingClientRect();
        return rect.bottom > 0 && rect.top < window.innerHeight;
      }

      startAutoplay() {
        const speed = parseInt(this.dataset.autoplaySpeed) || 5000;
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, speed);
      }

      resetAutoplay() {
        if (this.dataset.autoplay === 'true') {
          clearInterval(this.autoplayInterval);
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
    }

    customElements.define('bestsellers-carousel-{{ ai_gen_id }}', BestsellersCarousel{{ ai_gen_id }});
  })();
</script>


                  <div class="ai-bestsellers-carousel__price-{{ ai_gen_id }}">
                    {{ shop.currency }} {{ placeholder_price }}
                  </div>
                </div>
              </a>
            </article>
          {% endfor %}
        {% else %}
          {% for product in products limit: 8 %}
            <article class="ai-bestsellers-carousel__slide-{{ ai_gen_id }}" data-slide-index="{{ forloop.index0 }}" role="listitem">
              <a class="ai-bestsellers-carousel__card-link-{{ ai_gen_id }}" href="{{ product.url }}" aria-label="{{ product.title | escape }}">
                <div class="ai-bestsellers-carousel__image-wrapper-{{ ai_gen_id }}" data-product-id="{{ product.id }}">
                {% if product.featured_image %}

                        <circle cx="22" cy="32" r="6"/>
                        <circle cx="42" cy="32" r="6"/>
                      </svg>
                    {% when 3 %}
                      <svg viewBox="0 0 64 64" aria-hidden="true">
                        <circle cx="24" cy="32" r="12"/>
                        <circle cx="40" cy="32" r="12"/>
                      </svg>
                    {% when 4 %}
                      <svg viewBox="0 0 64 64" aria-hidden="true">
                        <path d="M14 30c6-10 30-10 36 0"/>
                        <path d="M14 34c6 10 30 10 36 0"/>
                        <circle cx="14" cy="32" r="2"/>
                        <circle cx="50" cy="32" r="2"/>
                      </svg>
                    {% when 5 %}
                      <svg viewBox="0 0 64 64" aria-hidden="true">
                        <path d="M20 22c-6 4-10 10-10 18 0 12 10 22 22 22s22-10 22-22c0-8-4-14-10-18"/>
                      </svg>
                    {% when 6 %}
                      <svg viewBox="0 0 64 64" aria-hidden="true">
                        <rect x="14" y="24" width="24" height="16" rx="8"/>
                        <rect x="26" y="24" width="24" height="16" rx="8"/>
                      </svg>
                      {% else %}
                        <svg viewBox="0 0 64 64" aria-hidden="true">
                          <path d="M32 14c6 6 10 12 10 18 0 6-4 10-10 10s-10-4-10-10c0-6 4-12 10-18z"/>
                          <circle cx="32" cy="14" r="3"/>

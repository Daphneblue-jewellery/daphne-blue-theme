    {% assign slide_total = products.count %}
    {% assign show_placeholders = false %}
    {% if slide_total > 8 %}
      {% assign slide_total = 8 %}
    {% endif %}
    {% if slide_total == 0 %}
      {% assign slide_total = 8 %}
      {% assign show_placeholders = true %}

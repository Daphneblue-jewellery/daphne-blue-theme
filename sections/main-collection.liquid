    display: none;
  }

  .db-land-collection .facets__status--fallback {
    display: none;
  }

  .db-land-collection .facets__form-wrapper--fallback {
    display: none;
  }

  @media (max-width: 989px) {
    .db-land-collection .db-land-editorial {
      grid-template-columns: 1fr;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .db-land-collection .db-land-chip {
      transition: none;
      transform: none;
      box-shadow: none;
    }
  }

  /* Daphne Blue editorial filter rail */

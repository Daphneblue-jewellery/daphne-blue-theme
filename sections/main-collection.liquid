{% javascript %}
  const url = new URL(window.location.href);
  if (url.hash) {
    document.addEventListener(
      'DOMContentLoaded',
      () => {
        const card = document.getElementById(url.hash.slice(1));
        if (card) {
          card.scrollIntoView({ behavior: 'instant' });
        }
      },
      { once: true }
    );
  }

  document.addEventListener('DOMContentLoaded', () => {
    const landRoot = document.querySelector('.db-land-collection');
    if (!landRoot) return;

    const landFilters = landRoot.querySelector('.facets--horizontal');
    if (landFilters && !landFilters.id) {
      landFilters.id = 'LandFilters';
    }

    const clickHandler = (event) => {
      const chip = event.target.closest('[data-land-filter-chip]');
      if (!chip) return;
      event.preventDefault();

      const value = (chip.dataset.value || '').toLowerCase();
      const inputs = document.querySelectorAll(
        '.facets input[type=\"checkbox\"], .facets input[type=\"radio\"]'
      );
      const match = Array.from(inputs).find((input) => {
        return (input.value || '').toLowerCase() === value;
      });

      if (match) {
        match.click();
        match.dispatchEvent(new Event('change', { bubbles: true }));
        const form = match.closest('form');
        if (form) form.dispatchEvent(new Event('submit', { bubbles: true }));
        return;
      }

      const filters = document.getElementById('LandFilters');
      if (filters) {
        filters.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    };

    const landCta = document.querySelector('.db-land-cta');
    const landControls =
      document.getElementById('LandControls') ||
      document.getElementById('LandFilters');

    const slowScrollTo = (target) => {
      if (!target) return;
      const header = document.querySelector('#header-component');
      const offset = (header?.getBoundingClientRect().height || 0) + 16;
      const startY = window.scrollY;
      const destination =
        target.getBoundingClientRect().top + window.scrollY - offset;
      const duration = 800; // slower micro-interaction
      const startTime = performance.now();
      const easeOutCubic = (t) => 1 - Math.pow(1 - t, 3);

      const step = (now) => {
        const elapsed = Math.min(1, (now - startTime) / duration);
        const eased = easeOutCubic(elapsed);
        const nextY = startY + (destination - startY) * eased;
        window.scrollTo({ top: nextY, left: 0, behavior: 'auto' });
        if (elapsed < 1) requestAnimationFrame(step);
      };

      requestAnimationFrame(step);
    };

    if (landCta && landControls) {
      landCta.addEventListener('click', (event) => {
        event.preventDefault();
        slowScrollTo(landControls);
      });
    }

    document.addEventListener('click', clickHandler);
  });
{% endjavascript %}


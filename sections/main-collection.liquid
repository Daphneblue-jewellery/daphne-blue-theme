  {% render 'skip-to-content-link', href: '#ResultsList', text: 'accessibility.skip_to_results_list' %}

{% if is_land_collection %}
{% endif %}

  {% if use_sidebar_filters %}
    <div class="db-collection-facets__inner page-width">
  {% endif %}
      <div
        class="collection-wrapper grid gap-style"
      >
        {% content_for 'block',
          type: 'filters',
          id: 'filters',
          results: collection,
          results_size: collection.products_count
        %}

        {% assign products_per_page = 24 %}

        {% if section.settings.enable_infinite_scroll == false %}
          {% assign products_per_page = section.settings.products_per_page %}
        {% endif %}

        {% paginate collection.products by products_per_page %}
          {% capture children %}
            {% for product in collection.products %}
              <li
                id="{{ section.id }}-{{ product.id }}"
                class="product-grid__item product-grid__item--{{ forloop.index0 }}"
                data-page="{{ paginate.current_page }}"
                data-product-id="{{ product.id }}"
                ref="cards[]"
              >
                {% if is_land_collection %}
                  {% render 'db-product-card', product: product %}
                {% else %}
                  {% # theme-check-disable %}
                  {% content_for 'block', type: '_product-card', id: 'product-card', closest.product: product %}
                  {% # theme-check-enable %}
                {% endif %}
              </li>
            {% endfor %}
          {% endcapture %}

          {% render 'product-grid',
            section: section,
            children: children,
            products: collection.products,
            paginate: paginate,
            enable_infinite_scroll: section.settings.enable_infinite_scroll,
            hide_empty_state: is_land_collection,
            placeholder_children: placeholder_children
          %}
        {% endpaginate %}
      </div>
  {% if use_sidebar_filters %}
    </div>
  {% endif %}
</results-list>

{% stylesheet %}
  .main-collection-grid {
    grid-column: var(--grid-column--mobile);

    @media screen and (min-width: 750px) {
      grid-column: var(--grid-column--desktop);
    }
  }

  .collection-wrapper {
    @media screen and (min-width: 750px) {
      grid-template-columns:
        1fr repeat(
          var(--centered-column-number),
          minmax(0, calc((var(--page-width) - var(--page-margin) * 2) / var(--centered-column-number)))
        )
        1fr;
    }
  }

  .collection-wrapper:has(.facets-block-wrapper--full-width),
  .collection-wrapper:has(.collection-wrapper--full-width) {
    @media screen and (min-width: 750px) {
      grid-column: 1 / -1;
      grid-template-columns:
        minmax(var(--page-margin), 1fr) repeat(
          var(--centered-column-number),
          minmax(0, calc((var(--page-width) - var(--page-margin) * 2) / var(--centered-column-number)))
        )
        minmax(var(--page-margin), 1fr);
    }
  }

  .collection-wrapper:has(.facets--vertical) .facets-block-wrapper--vertical:not(.hidden) ~ .main-collection-grid {
    @media screen and (min-width: 750px) {
      grid-column: var(--facets-vertical-col-width) / var(--full-width-column-number);
    }
  }

  .collection-wrapper:has(.facets-block-wrapper--vertical:not(#filters-drawer)):has(.collection-wrapper--full-width) {
    @media screen and (min-width: 750px) {
      grid-column: 1 / -1;
      grid-template-columns: 0fr repeat(var(--centered-column-number), minmax(0, 1fr)) 0fr;
    }
  }

  :is(.collection-wrapper--full-width, .collection-wrapper--full-width-on-mobile)
    [product-grid-view='default']
    .product-grid__card {
    @media screen and (max-width: 749px) {
      padding-inline-start: max(var(--padding-xs), var(--padding-inline-start));
      padding-inline-end: max(var(--padding-xs), var(--padding-inline-end));
    }
  }

  :is(.collection-wrapper--full-width, .collection-wrapper--full-width-on-mobile)
    [product-grid-view='mobile-single']
    .product-grid__card {
    @media screen and (max-width: 749px) {
      padding-inline-start: max(var(--padding-xs), var(--padding-inline-start));
      padding-inline-end: max(var(--padding-xs), var(--padding-inline-end));
    }
  }

  /* Make product media go edge-to-edge by using negative margins */
  :is(.collection-wrapper--full-width) .card-gallery,
  :is(.collection-wrapper--full-width-on-mobile) .card-gallery {
    @media screen and (max-width: 749px) {
      margin-inline-start: calc(-1 * max(var(--padding-xs), var(--padding-inline-start)));
      margin-inline-end: calc(-1 * max(var(--padding-xs), var(--padding-inline-end)));
    }
  }

  /* Land collection enhancements */
  .db-land-collection {
    --land-filters-offset: calc(var(--header-group-height, 72px) + 10px);
  }

  .db-land-collection .main-collection-grid {
    padding: var(--padding-block-start) var(--page-margin) var(--padding-block-end) var(--page-margin);
  }

  @media (max-width: 749px) {
    .db-land-collection .main-collection-grid {
      padding: var(--grid--margin--mobile, 0) var(--page-margin);
    }
  }

  .db-land-collection .db-land-controls { display: none; }

  .db-land-collection .facets__filters-wrapper--fallback {
    display: none;
  }

  .db-land-collection .facets__status--fallback-note {
    display: none;
  }

  .db-land-collection .facets__status--fallback {
    display: none;
  }

  .db-land-collection .facets__form-wrapper--fallback {
    display: none;
  }

  @media (prefers-reduced-motion: reduce) {
    .db-land-collection .db-land-chip {
      transition: none;
      transform: none;
      box-shadow: none;
    }
  }

  /* Daphne Blue editorial filter rail */
  .db-land-collection .db-filter-rail__container {
    width: 100%;
  }

  .db-land-collection .db-land-filter-rail {
    --db-land-transition: 520ms cubic-bezier(0.18, 0.88, 0.24, 1);

    width: 100%;
    padding: clamp(14px, 3vw, 22px) 0 clamp(10px, 2vw, 18px);
    display: grid;
    gap: clamp(12px, 2vw, 20px);
    background: transparent;
    border: none;
    position: relative;
  }

  .db-land-collection .db-land-filter-rail__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: clamp(12px, 2vw, 18px);
  }

  .db-land-collection .db-land-filter-rail__copy {
    display: grid;
    gap: 6px;
    max-width: min(620px, 70%);
  }

  .db-land-collection .db-land-filter-rail__eyebrow {
    margin: 0;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-size: 0.86rem;
    color: rgb(var(--color-foreground-rgb) / 0.6);
    font-family: var(--db-type-press-family);
  }

  .db-land-collection .db-land-filter-rail__lede {
    margin: 0;
    font-family: var(--font-body--family);
    font-size: 1rem;
    line-height: 1.7;
    color: rgb(var(--color-foreground-rgb) / 0.7);
  }

  .db-land-collection .db-land-filter-rail__sort {
    display: flex;
    align-items: flex-end;
    gap: 12px;
    font-size: 0.95rem;
    color: rgb(var(--color-foreground-rgb) / 0.55);
    opacity: 0.85;
  }

  .db-land-collection .db-land-filter-rail__sort .facets__summary {
    padding: 2px 0;
    border: none;
    border-radius: 0;
    background: transparent;
    text-decoration: underline transparent 0.12em;
    text-underline-offset: 0.14em;
    color: currentColor;
    transition: color var(--db-land-transition), text-decoration-color var(--db-land-transition), transform var(--db-land-transition);
  }

  .db-land-collection .db-land-filter-rail__sort .facets__summary .icon-caret {
    height: var(--icon-size-xs);
    width: var(--icon-size-xs);
    transition: transform var(--db-land-transition), color var(--db-land-transition);
  }

  .db-land-collection .db-land-filter-rail__sort .facets__summary:is(:hover, :focus-visible, :active) {
    color: rgb(var(--color-foreground-rgb) / 0.82);
    text-decoration-color: currentColor;
    transform: translateX(2px);
  }

  .db-land-collection .db-land-filter-rail__sort .facets__summary:is(:hover, :focus-visible, :active) .icon-caret {
    transform: translateY(-1px);
    color: currentColor;
  }

  .db-land-collection .db-land-filter-rail__layer {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: clamp(14px, 2vw, 20px);
    padding: 6px 0;
    box-shadow: inset 0 -1px 0 rgb(var(--color-foreground-rgb) / 0.06);
  }

  .db-land-collection .db-land-filter-rail__layer--secondary {
    padding-top: 2px;
    box-shadow: inset 0 -1px 0 rgb(var(--color-foreground-rgb) / 0.04);
  }

  .db-land-collection .db-land-filter-rail__label {
    font-family: var(--db-type-press-family);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-size: 0.9rem;
    color: rgb(var(--color-foreground-rgb) / 0.62);
    min-width: max-content;
  }

  .db-land-collection .db-land-chip-row {
    display: flex;
    flex-wrap: wrap;
    gap: clamp(12px, 2vw, 18px);
    row-gap: clamp(8px, 1vw, 14px);
  }

  .db-land-collection .db-land-chip {
    position: relative;
    background: none;
    border: none;
    padding: 4px 0;
    color: rgb(var(--color-foreground-rgb) / 0.78);
    font-family: var(--font-body--family);
    font-size: 1rem;
    letter-spacing: 0.01em;
    cursor: pointer;
    transition: opacity var(--db-land-transition), transform var(--db-land-transition), color var(--db-land-transition), text-decoration-color var(--db-land-transition);
  }

  .db-land-collection .db-land-chip::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    height: 1px;
    width: 100%;
    background: currentColor;
    opacity: 0;
    transform: translateY(4px) scaleX(0.9);
    transition: opacity var(--db-land-transition), transform var(--db-land-transition);
  }

  .db-land-collection .db-land-chip:is(:hover, :focus-visible) {
    opacity: 0.82;
    transform: translateX(2px);
  }

  .db-land-collection .db-land-chip:is(:hover, :focus-visible)::after {
    opacity: 0.4;
    transform: translateY(0) scaleX(1);
  }

  .db-land-collection .db-land-chip.is-active {
    color: rgb(var(--color-foreground-rgb));
    opacity: 1;
  }

  .db-land-collection .db-land-chip.is-active::after {
    opacity: 0.9;
    transform: translateY(0) scaleX(1);
  }

  .db-land-collection .db-land-chip.is-disabled {
    opacity: 0.35;
    cursor: not-allowed;
  }

  .db-land-collection .db-land-chip.is-disabled:is(:hover, :focus-visible) {
    transform: none;
  }

  .db-land-collection .db-land-chip--secondary {
    color: rgb(var(--color-foreground-rgb) / 0.65);
  }

  .db-land-collection .db-land-chip--secondary.is-active {
    color: rgb(var(--color-foreground-rgb) / 0.9);
  }

  .db-land-collection .db-land-filter-rail__status-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: clamp(10px, 2vw, 16px);
    padding-top: 2px;
  }

  .db-land-collection .db-land-filter-rail__status-text {
    margin: 0;
    font-size: 0.95rem;
    color: rgb(var(--color-foreground-rgb) / 0.64);
    line-height: 1.6;
  }

  .db-land-collection .db-land-filter-rail__actions {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .db-land-collection .db-land-filter-rail__clear {
    color: rgb(var(--color-foreground-rgb) / 0.6);
    text-decoration: underline transparent 0.12em;
    text-underline-offset: 0.16em;
    transition: color var(--db-land-transition), text-decoration-color var(--db-land-transition), transform var(--db-land-transition);
    padding: 4px 0;
  }

  .db-land-collection .db-land-filter-rail__clear:is(:hover, :focus-visible) {
    color: rgb(var(--color-foreground-rgb));
    text-decoration-color: currentColor;
    transform: translateX(2px);
  }

  .db-land-collection .db-land-filter-rail__native {
    position: absolute;
    inset: 0 auto auto 0;
    width: 1px;
    height: 1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    clip-path: inset(50%);
    white-space: nowrap;
    pointer-events: none;
  }

  .db-land-collection .db-land-filter-rail .facets__filters-wrapper {
    margin: 0;
  }

  .db-land-collection .db-land-filter-rail .facets__summary {
    border: none;
    background: transparent;
    padding: 0;
    min-height: auto;
    color: rgb(var(--color-foreground-rgb) / 0.7);
  }

  .db-land-collection .db-land-filter-rail .facets__panel-content,
  .db-land-collection .db-land-filter-rail .sorting-filter__options {
    border-radius: 14px;
    border: 1px solid rgb(var(--color-foreground-rgb) / 0.08);
    box-shadow: 0 16px 30px rgb(0 0 0 / 0.04);
    background: rgb(var(--color-background-rgb));
    padding: var(--padding-sm);
    margin-top: 6px;
  }

  .db-land-collection .db-land-filter-rail .products-count-wrapper {
    display: none !important;
  }

  @media (max-width: 989px) {
    .db-land-collection .db-land-filter-rail__header {
      flex-direction: column;
    }

    .db-land-collection .db-land-filter-rail__copy {
      max-width: 100%;
    }
  }

  @media (max-width: 749px) {
    .db-land-collection .db-land-filter-rail {
      gap: 12px;
      padding-inline: max(var(--padding-sm), var(--padding-inline-start)) max(var(--padding-sm), var(--padding-inline-end));
    }

    .db-land-collection .db-land-filter-rail__layer {
      gap: 12px;
    }

    .db-land-collection .db-land-filter-rail__label {
      width: 100%;
    }

{% assign onboarding = placeholder | default: false %}

{% assign descriptor = '' %}
{% unless onboarding %}
  {% assign descriptor = product.metafields.custom.poetic_line %}
  {% if descriptor == blank %}
    {% assign descriptor = product.metafields.custom.descriptor %}
  {% endif %}
  {% if descriptor == blank %}
    {% assign descriptor = product.metafields.custom.editorial_note %}
  {% endif %}
{% endunless %}
{% assign descriptor = descriptor | strip_html | strip %}

{% assign target_url = product.url | default: '#' %}
{% if onboarding %}
  {% assign target_url = '#' %}
{% endif %}

{% assign featured_image = nil %}
{% unless onboarding %}
  {% assign featured_image = product.featured_image %}
{% endunless %}

{% assign placeholder_image = placeholder_image %}
{% if template.suffix == 'the-land' %}
  {% assign land_placeholder_images = 'land-placeholder-1.jpg|land-placeholder-2.jpg|land-placeholder-3.jpg|land-placeholder-4.jpg|land-placeholder-5.jpg|land-placeholder-6.jpg|land-placeholder-7.jpg|land-placeholder-8.jpg' | split: '|' %}
  {% if featured_image == nil %}
    {% assign placeholder_seed = placeholder_id | default: product.id | default: 0 | plus: 0 %}
    {% assign placeholder_index = placeholder_seed | modulo: land_placeholder_images.size %}
    {% assign placeholder_image = placeholder_image | default: land_placeholder_images[placeholder_index] %}
  {% endif %}
{% endif %}

{% assign placeholder_variant = '' %}
{% assign matched_placeholder_variant = false %}
{% assign title_handle = product.title | default: '' | handle %}
{% assign descriptor_text = descriptor | default: '' | downcase %}
{% if title_handle contains 'wing' or descriptor_text contains 'wing' %}
  {% assign placeholder_variant = 'wing-necklace' %}
  {% assign matched_placeholder_variant = true %}
{% elsif title_handle contains 'wildflower' or descriptor_text contains 'wildflower' %}
  {% assign placeholder_variant = 'wildflower-chain' %}
  {% assign matched_placeholder_variant = true %}
{% elsif title_handle contains 'wrap' or title_handle contains 'ring' or descriptor_text contains 'ring' %}
  {% assign placeholder_variant = 'wrap-ring' %}
  {% assign matched_placeholder_variant = true %}
{% elsif title_handle contains 'petal' or descriptor_text contains 'petal' %}
  {% assign placeholder_variant = 'petal-chain' %}
  {% assign matched_placeholder_variant = true %}
{% elsif title_handle contains 'chain' or descriptor_text contains 'chain' %}
  {% assign placeholder_variant = 'wildflower-chain' %}
  {% assign matched_placeholder_variant = true %}
{% elsif title_handle contains 'necklace' or descriptor_text contains 'necklace' %}
  {% assign placeholder_variant = 'wing-necklace' %}
  {% assign matched_placeholder_variant = true %}
{% endif %}
{% assign placeholder_variants = 'wing-necklace,wildflower-chain,wrap-ring,petal-chain' | split: ',' %}
{% assign placeholder_seed = placeholder_id | default: product.id | default: 0 | plus: 0 %}
{% assign placeholder_index = placeholder_seed | modulo: placeholder_variants.size %}
{% assign placeholder_fallback = placeholder_variants[placeholder_index] %}
{% if placeholder_variant == '' %}
  {% assign placeholder_variant = placeholder_fallback %}
{% endif %}

{% if placeholder_image == blank or matched_placeholder_variant %}
  {% case placeholder_variant %}
    {% when 'wing-necklace' %}
      {% assign placeholder_image = 'jewel-wing-necklace.jpg' %}
    {% when 'wildflower-chain' %}
      {% assign placeholder_image = 'jewel-wildflower-chain.jpg' %}
    {% when 'wrap-ring' %}
      {% assign placeholder_image = 'jewel-wrap-ring.jpg' %}
    {% when 'petal-chain' %}
      {% assign placeholder_image = 'jewel-petal-chain.jpg' %}
  {% endcase %}
{% endif %}

{% assign price = nil %}
{% unless onboarding %}
  {% assign price = product.price %}
{% endunless %}

{% assign product_has_swatches = false %}
{% unless onboarding %}
  {% for product_option in product.options_with_values %}
    {% assign swatch_count = product_option.values | map: 'swatch' | compact | size %}
    {% if swatch_count > 0 %}
      {% assign product_has_swatches = true %}
      {% break %}
    {% endif %}
  {% endfor %}
{% endunless %}

<a class="db-editorial-card" href="{{ target_url }}" {% if onboarding %}aria-hidden="true"{% endif %}>
  <div class="db-editorial-card__media" aria-hidden="true">
    {% if featured_image %}
      <img
        src="{{ featured_image | image_url: width: 1200 }}"
        alt="{{ featured_image.alt | default: product.title | escape }}"
        loading="lazy"
        width="{{ featured_image.width }}"
        height="{{ featured_image.height }}"
      >
    {% elsif placeholder_image %}
      <img
        src="{{ placeholder_image | asset_url }}"
        alt="{{ product.title | default: 'Jewellery placeholder' | escape }}"
        loading="lazy"
        width="1200"
        height="1500"
      >
    {% else %}
      <div class="db-editorial-card__placeholder"></div>
    {% endif %}
  </div>

  <div class="db-editorial-card__body">
    <h3 class="db-editorial-card__title">{% unless onboarding %}{{ product.title }}{% else %}&nbsp;{% endunless %}</h3>
    <div class="db-editorial-card__meta">
      <span class="db-editorial-card__price">{% if price %}{{ price | money }}{% else %}&nbsp;{% endif %}</span>
      {% if product_has_swatches %}
        <div class="db-editorial-card__swatches" aria-hidden="true">
          <ul class="db-editorial-card__swatch-list" role="list">
            {% for product_option in product.options_with_values %}
              {% assign swatch_count = product_option.values | map: 'swatch' | compact | size %}
              {% if swatch_count == 0 %}
                {% continue %}
              {% endif %}
              {% for product_option_value in product_option.values %}
                {% if product_option_value.swatch == blank %}
                  {% continue %}
                {% endif %}
                <li class="db-editorial-card__swatch">
                  {% render 'swatch',
                    swatch: product_option_value.swatch,
                    variant_image: product_option_value.variant.featured_media
                  %}
                </li>
              {% endfor %}
              {% break %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</a>

<style>
  .db-editorial-card {
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    background: rgb(var(--color-background-rgb));
    box-shadow: 0 10px 24px rgb(0 0 0 / 0.04);
    aspect-ratio: 4 / 5.2;
    transition: box-shadow 520ms ease-out;
  }

  .db-editorial-card:focus-visible {
    outline: 2px solid rgb(var(--color-foreground-rgb) / 0.45);
    outline-offset: 6px;
  }

  .db-editorial-card__media {
    position: relative;
    flex: 0 0 72%;
    overflow: hidden;
    background: linear-gradient(160deg, rgb(var(--color-foreground-rgb) / 0.04), rgb(var(--color-background-rgb)) 70%);
  }

  .db-editorial-card__media img,
  .db-editorial-card__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 520ms ease-out, filter 520ms ease-out;
  }

  .db-editorial-card__media::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgb(255 255 255 / 0) 55%, rgb(226 210 189 / 0.45) 100%);
    pointer-events: none;
  }

  .db-editorial-card__placeholder {
    background: radial-gradient(circle at 30% 30%, rgb(var(--color-foreground-rgb) / 0.08), transparent 45%),
      linear-gradient(135deg, rgb(var(--color-foreground-rgb) / 0.06), rgb(var(--color-background-rgb) / 0.8));
  }

  .db-editorial-card__body {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding: 18px;
  }

  .db-editorial-card__title {
    margin: 0;
    font-family: var(--font-heading--family);
    font-weight: 500;
    font-size: clamp(1.02rem, 1vw + 0.8rem, 1.3rem);
    letter-spacing: 0.01em;
    text-decoration: underline transparent 0.08em;
    text-underline-offset: 0.22em;
    text-decoration-thickness: 1px;
    transition: text-decoration-color 520ms ease-out;
  }

  .db-editorial-card__meta {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 6px;
    margin-top: 0;
  }

  .db-editorial-card__price {
    font-size: 0.82rem;
    color: rgb(var(--color-foreground-rgb) / 0.55);
    letter-spacing: 0.02em;
    opacity: 0;
    transform: translateY(4px);
    transition: opacity 520ms ease-out, transform 520ms ease-out;
  }

  .db-editorial-card__swatches {
    opacity: 0;
    transform: translateY(4px);
    transition: opacity 520ms ease-out, transform 520ms ease-out;
    --variant-picker-swatch-width-unitless: 12;
    --variant-picker-swatch-height-unitless: 12;
    --variant-picker-swatch-width: 12px;
    --variant-picker-swatch-height: 12px;
    --variant-picker-swatch-radius: 999px;
    --style-border-swatch-width: 1px;
    --style-border-swatch-opacity: 18%;
  }

  .db-editorial-card__swatch-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .db-editorial-card__swatch {
    display: flex;
  }

  .db-editorial-card__swatch .swatch {
    --min-width-unitless: 12;
    --min-height-unitless: 12;
    --min-width: 12px;
    --min-height: 12px;
    --max-swatch-size: 22px;
    filter: saturate(0.75) brightness(1.03);
    opacity: 0.85;
  }

  .db-editorial-card:hover .db-editorial-card__media img,
  .db-editorial-card:focus-visible .db-editorial-card__media img {
    transform: scale(1.025);
    filter: brightness(1.04);
  }

  .db-editorial-card:hover .db-editorial-card__title,
  .db-editorial-card:focus-visible .db-editorial-card__title {
    text-decoration-color: rgb(var(--color-foreground-rgb) / 0.28);
  }

  .db-editorial-card:hover .db-editorial-card__price,
  .db-editorial-card:focus-visible .db-editorial-card__price {
    opacity: 1;
    transform: translateY(0);
  }

  .db-editorial-card:hover .db-editorial-card__swatches,
  .db-editorial-card:focus-visible .db-editorial-card__swatches {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .db-editorial-card,
    .db-editorial-card__media img,
    .db-editorial-card__title {
      transition: none;
      transform: none;
    }
    .db-editorial-card__price {
      transition: none;
      transform: none;
    }
  }
</style>
